{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "react"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "../sdk-base/src/*",
                "../sdk-react/src/*"
            ],
            "@keyban/sdk-base": [
                "../sdk-base/src"
            ]
        },
        "jsx": "react-jsx" // Use the new JSX transform
    },
    "include": [
        "../sdk-base/src/**/*.ts",
        "../sdk-base/src/**/*.tsx",
        "../sdk-react/src/**/*.ts",
        "../sdk-react/src/**/*.tsx"
    ]
}
